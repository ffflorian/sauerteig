{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "dependencies": {
    "@vitejs/plugin-react": "5.1.2",
    "date-fns": "4.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.4",
    "react-swipeable": "7.0.2",
    "vite": "7.3.0"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "2.0.16",
    "@ffflorian/eslint-config-react": "0.1.0",
    "@ffflorian/prettier-config": "0.5.4",
    "@types/node": "~24",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "9.39.2",
    "oxlint": "1.42.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "vite-plugin-eslint": "1.8.1"
  },
  "engines": {
    "node": ">= 14.10"
  },
  "license": "GPL-3.0",
  "name": "sauerteig",
  "prettier": "@ffflorian/prettier-config",
  "private": true,
  "resolutions": {
    "strip-ansi": "^6"
  },
  "scripts": {
    "build": "tsc && vite build",
    "clear": "rimraf dist",
    "dev": "yarn start",
    "dist": "yarn clear && yarn build",
    "fix": "yarn fix:ts && yarn fix:other",
    "fix:other": "yarn prettier --write",
    "fix:ts": "yarn lint:ts:oxlint --fix && yarn lint:ts:eslint --fix",
    "lint": "yarn lint:other && yarn lint:ts",
    "lint:other": "yarn prettier --list-different",
    "lint:ts": "yarn lint:ts:oxlint && yarn lint:ts:eslint",
    "lint:ts:eslint": "eslint .",
    "lint:ts:oxlint": "oxlint --ignore-path .gitignore .",
    "prettier": "prettier \"*.{json,md,yml}\"",
    "start": "vite --open",
    "test": "exit 0"
  },
  "version": "1.6.0",
  "packageManager": "yarn@4.12.0"
}
